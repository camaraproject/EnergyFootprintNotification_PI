{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "properties": {
        "image": {
            "properties": {
                "pullPolicy": {
                    "type": "string"
                },
                "repository": {
                    "type": "string"
                },
                "tag": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "imagePullSecrets": {
            "type": "array"
        },
        "knative": {
            "properties": {
                "broker": {
                    "properties": {
                        "class": {
                            "type": "string"
                        },
                        "name": {
                            "type": "string"
                        },
                        "config": {
                            "properties": {
                                "name": {
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        }
                    },
                    "type": "object"
                },
                "namespace": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "api": {
            "properties": {
                "maxTimePeriodDays": {
                    "type": "integer",
                    "minimum": 1,
                    "description": "Maximum allowed time period in days for historical data queries"
                }
            },
            "type": "object"
        },
        "logger": {
            "properties": {
                "format": {
                    "type": "string"
                },
                "level": {
                    "type": "string"
                }
            },
            "type": "object"
        },
        "calculator": {
            "properties": {
                "carbonFactorTCO2ePerKWh": {
                    "type": "number",
                    "minimum": 0,
                    "description": "CO2 conversion factor in tCO2e per kWh"
                }
            },
            "type": "object"
        }
    },
    "type": "object"
}
